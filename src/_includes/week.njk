---
layout: base.njk
goals:
  - Say hello and check-in
  - Take attendance
---

<div class="col-sm-6">
  <h1>Week {{ weekNum }} : {{ title }}</h1>
  {# goals #}
  <ul class="no-bullets">
    In-Class Goals: {% for g in goals %}
    <li><input type="checkbox" class="cb" /> {{ g }}</li>
    {% endfor %}
  </ul>
  <h2>Homework</h2>

  {% if tutorial %}
  <h3>Tutorial</h3>
  <div class="row">
    {% for o in tutorial%} {% if o.type == "youtube" %}
    <div class="col-md-6 card" style="padding: 10px">
      <div class="ratio ratio-16x9">
        <iframe
          src="https://youtube.com/embed/{{ o.id }} "
          frameborder="0"
          allow="fullscreen"
          allowfullscreen
        ></iframe>
      </div>
    </div>
    {% elif o.type == "link" %}
    <div class="col-md-6 card" style="padding: 10px">
      <a href="{{ o.url }}">
        <div class="card-header">{{ o.name }}</div>
      </a>
    </div>
    {% elif o.type == "links" %}
    <div class="col-md-6 card" style="padding: 10px">
      <div class="card-header">{{ o.name }}</div>
      <ul class="list-group list-group-flush">
        {% for l in o.links %}
        <a href="{{ l.url }}">
          <li class="list-group-item">{{ l.name }}</li>
        </a>
        {% endfor %}
      </ul>
    </div>
    {% endif%} {% endfor%}
  </div>

  {% endif %} {% if sketch %}
  <h3>{{ sketch.title }}</h3>
  {% for d in sketch.text%}
  <p>{{ d }}</p>
  {% endfor %} {% if sketch.img %}
  <div class="row">
    {% for i in sketch.img%}
    <div class="col-sm-4">
      <a href="/assets/img/{{ i }}">
        <img src="/assets/img/{{ i }}" class="img-thumbnail" />
      </a>
    </div>
    {% endfor%}
  </div>
  {% endif %} {% if sketch.requirements %}
  <h4>requirements</h4>
  <ol>
    {% for r in sketch.requirements%}
    <li>{{ r }}</li>
    {% endfor %}
  </ol>
  {% endif %} {% if sketch.tips %}
  <h4>tips</h4>
  <ol>
    {% for t in sketch.tips%}
    <li>{{ t }}</li>
    {% endfor %}
  </ol>
  {% endif %} {% endif %} {% if readings %}

  <h3>Readings</h3>
  <div class="row">
    {% for r in readings %}
    <div class="col-md-12 col-lg-6">
      <div class="card">
        <div class="row">
          <div class="col-12">
            {% if r.img %}
            <img src="{{ r.img }}" alt="Card image cap" class="img-fluid" />
            {% else %}
            <i class="fa-book"></i>
            {% endif %}
          </div>
          <div class="col-12">
            <a href="{{ r.url }}" class="btn btn-dark">
            <div class="card-body">
              <h5 class="card-title">{{ r.name }}</h5>
              <p class="card-text">
                {{ r.description }}
              </p>
              <p class="card-text">by {{ r.authors }}</p>
              
            </div>
            </a>
          </div>
        </div>
      </div>
    </div>

    {% endfor %}
  </div>
  {% endif %}

  {{ content | safe}}

  {% if listenings %}
  <h3>Listenings</h3>
  <div class="row masonry" data-masonry='{"percentPosition": true }'>
    {% for l in listenings%} {% if l.type == "youtube" %}
    <div class="col-md-6 card" style="padding: 10px">
      <div class="ratio ratio-16x9">
        <iframe
          src="https://youtube.com/embed/{{ l.id }} "
          frameborder="0"
          allow="fullscreen"
          allowfullscreen
        ></iframe>
      </div>
    </div>
    {% elif l.type == "link" %}
    <div class="col-md-6 card" style="padding: 10px">
      <a href="{{ l.url }}">
        <div class="card-header">{{ l.name }}</div>
      </a>
    </div>

    {% elif o.type == "links" %}
    <div class="col-md-6 card" style="padding: 10px">
      <div class="card-header">{{ o.name }}</div>
      <ul class="list-group list-group-flush">
        {% for o in l.links %}
        <a href="{{ o.url }}">
          <li class="list-group-item">{{ o.name }}</li>
        </a>
        {% endfor %}
      </ul>
    </div>
    {% endif%} {% endfor%}
  </div>

  {% endif %} 

  <h3>Examples</h3>
  
{% p5gallery "src/scripts/introp5/" + weekNum %}

